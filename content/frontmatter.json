                          "fields": [
                            {
                              "title": "media",
                              "name": "media",
                              "type": "string"
                            },
                            {
                              "title": "resource",
                              "name": "resource",
                              "type": "string"
                            },
                            {
                              "title": "title",
                              "name": "title",
                              "type": "string"
                            },
                            {
                              "title": "alt",
                              "name": "alt",
                              "type": "string"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}